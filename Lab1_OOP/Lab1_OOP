        "# Create two heroes\n",
        "hero1 = Hero(\"Геральт\", 100, 25, 10)\n",
        "hero2 = Hero(\"Леший\", 120, 20, 15)\n",
        "\n",
        "# Simulate a battle\n",
        "while hero1.is_alive() and hero2.is_alive():\n",
        "    hero1.attack(hero2)\n",
        "    if hero2.is_alive():\n",
        "        hero2.attack(hero1)\n",
        "    else:\n",
        "        print(f\"\\n--- {hero2.name} is defeated! ---\")\n",
        "\n",
        "if hero1.is_alive():\n",
        "    print(f\"\\n--- {hero1.name} wins! ---\")\n",
        "else:\n",
        "    print(f\"\\n--- {hero1.name} is defeated! ---\")"
